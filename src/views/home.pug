        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header
            h1 Zoom Clone
        main 
            div#welcome
                h4 Open Rooms
                ul
                form(action="")
                    input(type="text", placeholder="your NickName", required)#nickname
                    input(placeholder="room name", required, type="text")#room_name
                    button Enter Room
            div#room
                h3
                form(action="")#name
                    input(type="text", placeholder="your NickName", required)
                    button Send
                ul 
                form(action="")#message
                    input(type="text", placeholder="write a msg", required)
                    button Send
